      "parameters": {
        "jsCode": "// Check if sender is VIP and add flag\nconst emailData = $('Extract Email Data').first().json;\nconst vipList = $('Get VIP List').all().map(i => i.json.Email?.toLowerCase() || i.json.email?.toLowerCase());\n\nconst isVIP = vipList.includes(emailData.from.toLowerCase());\n\nreturn [{\n  json: {\n    ...emailData,\n    isVIP,\n    vipPriority: isVIP ? 'HIGH' : 'NORMAL'\n  }\n}];"
      },
